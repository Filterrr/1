    interval: 6048000
    path: ./providerbaidu.yaml
    health-check:
      enable: false
      interval: 7200
      url: http://www.gstatic.com/generate_204

proxy-groups:
  - name: 🚀 国内节点
    type: select
    proxies:
      - 🚀 百度直连
      - ⚠️ UDP规则

  - name: 🚀 百度直连
    type: select
    use:
      - baidu

  - name: ⚠️ UDP规则
    type: select
    proxies:
      - 🛑 全球拦截
      - 🎯 全球直连

  - name: 🎯 全球直连
    type: select
    proxies:
      - DIRECT

  - name: 🛑 全球拦截
    type: select
    proxies:
      - REJECT

rule-providers:
  reject:
    type: http
    behavior: domain
